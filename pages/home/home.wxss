.search-wrapper {
    background: #42BD55;
    height: 80rpx;
    display: flex;
    margin-bottom: 20rpx;
}

.search-wrapper .search {
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    margin: 10rpx;
    border-radius: 10rpx;
}

.search-wrapper .search image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.title-wrapper {
    display: flex;
    justify-content: space-between;
    margin: 10px 40rpx;
    font-size: 32rpx;
    margin-bottom: 20rpx;
}

.right {
    display: flex;
    align-items: center;
}

.title-wrapper .right {
    color:#42BD55;
}

.title-wrapper .right .arrow {
    width: 15rpx;
    height: 15rpx;
    border-bottom: 1rpx solid #42BD55;
    border-right: 1rpx solid #42BD55;
    transform: rotate(-45deg);
}

.items .scroll-view {
    margin: 10rpx 20rpx;
    white-space: nowrap;
}

.items {
    white-space: nowrap;
}

.item{
    margin-left: 30rpx;
}
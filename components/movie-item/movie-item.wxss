.item {
    display: inline-flex;
    flex-direction: column;
    width: 160rpx;
}

.item .photo {
    width: 100%;
    height: 223rpx;
    border-radius: 10rpx;
}

.item .title {
    font-weight: bold;
    /* font-size: 32rpx; */
    width: 100%;
    /* 超出部分隐藏*/
    overflow: hidden;
    /* 超出部分显示... */
    text-overflow: ellipsis;
    white-space: nowrap
}

.item .stars {
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.item .stars .star {
    width: 25rpx;
    height: 25rpx;
}

.item .score {
    display: flex;
}
